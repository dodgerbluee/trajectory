{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"],
      "@lib/*": ["shared/lib/*"],
      "@visit-form/*": ["features/visits/visit-form/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"]
}
